<ul>
  <% @bookmarks.each do |bookmark| %>
    <li><a href=<%= bookmark.url %>><%=bookmark.title%></a></li>
  <% end %>
</ul>

<form action="/add_bookmark" method="post">
  URL<input type="text" name="url" /><br>
  Title<input type="text" name="title"><br>
  <input type="submit" value="Add">
</form>
<br>
<br>
<br>
<form action="/delete_bookmark" method="post">
  <label for="bookmark_to_delete">Choose a bookmark:</label>

  <select name="bookmark_to_delete" id="bookmark_to_delete">
    <% @bookmarks.each do |bookmark| %>
      <option value="<%= bookmark.id %>"><%= bookmark.title %></option>
    <% end %>
  </select>

  <input type="submit" value="Delete">
</form>
<br>
<form action="/update_bookmark" method="post">
  <label for="bookmark_to_update">Choose a bookmark:</label>

  <select name="bookmark_to_update" id="bookmark_to_update">
    <% @bookmarks.each do |bookmark| %>
      <option value="<%= bookmark.id %>"><%= bookmark.title %></option>
    <% end %>
  </select>

  <input type="submit" value="Update">
</form>
